    </ContentPage.Resources>
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Open Door">
            <ToolbarItem.Icon>
                <OnPlatform x:TypeArguments="FileImageSource">
                    <On Platform="Android, iOS"
                        Value="ic_card" />
                    <On Platform="UWP"
                        Value="Assets/ic_card.png" />
                </OnPlatform>
            </ToolbarItem.Icon>
        </ToolbarItem>
    </ContentPage.ToolbarItems>

